# ====================================
# AI Chat Frontend - Environment Variables Template
# ====================================
# 
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control
#
# For different environments:
# - .env.local (development - highest priority)
# - .env.development (development defaults)
# - .env.production (production defaults)
# ====================================

# ====================================
# API Configuration
# ====================================
# Backend API base URL
VITE_API_URL=http://localhost:8000/api

# WebSocket connection URL
VITE_WS_URL=ws://localhost:8000/ws

# API timeout in milliseconds
VITE_API_TIMEOUT=10000

# API retry attempts
# API retry attempts
VITE_API_RETRY_ATTEMPTS=3

# ====================================
# Authentication & Security
# ====================================
# JWT token expiry time (in seconds)
VITE_TOKEN_EXPIRY=3600

# Refresh token expiry time (in seconds)  
VITE_REFRESH_TOKEN_EXPIRY=604800

# Enable secure cookies (true for production)
VITE_SECURE_COOKIES=false

# Session storage key prefix
VITE_STORAGE_PREFIX=ai_chat_

# ====================================
# Third-party Services
# ====================================
# Stripe (Payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google OAuth
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Discord OAuth (если планируется)
VITE_DISCORD_CLIENT_ID=your-discord-client-id

# Sentry (Error tracking)
VITE_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxxxxx.ingest.sentry.io/xxxxxxxx

# Sentry environment
VITE_SENTRY_ENVIRONMENT=development

# Google Analytics / GTM
VITE_GA_TRACKING_ID=GA-XXXXXXXXX
VITE_GTM_ID=GTM-XXXXXXX

# Posthog (Product analytics)
VITE_POSTHOG_KEY=phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_POSTHOG_HOST=https://app.posthog.com

# ====================================
# Feature Flags
# ====================================
# Enable analytics tracking
VITE_ENABLE_ANALYTICS=true

# Enable error reporting to Sentry
VITE_ENABLE_SENTRY=false

# Enable debug mode (shows debug info in console)
VITE_DEBUG_MODE=true

# Enable development tools
VITE_ENABLE_DEV_TOOLS=true

# Enable beta features
VITE_ENABLE_BETA_FEATURES=false

# Enable NSFW content toggle
VITE_ENABLE_NSFW=true

# Enable subscription features
VITE_ENABLE_SUBSCRIPTIONS=true

# Enable character creation
VITE_ENABLE_CHARACTER_CREATION=true

# Enable real-time chat
VITE_ENABLE_REALTIME_CHAT=true

# WebSocket URL для real-time чата
VITE_WS_URL=ws://localhost:3001

# ===========================================
# External Services
# ===========================================

# Stripe публичный ключ для платежей
# Получить на https://dashboard.stripe.com/apikeys
VITE_STRIPE_KEY=pk_test_your_stripe_public_key

# Sentry DSN для отслеживания ошибок
# Получить на https://sentry.io/settings/projects/
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# App Configuration
# ===========================================

# Версия приложения
VITE_APP_VERSION=1.0.0

# Название приложения
VITE_APP_NAME=AI Chat

# ===========================================
# Feature Flags
# ===========================================

# Аналитика (Google Analytics, etc.)
VITE_ENABLE_ANALYTICS=false

# Sentry error tracking
VITE_ENABLE_SENTRY=false

# Система подписок
VITE_ENABLE_SUBSCRIPTIONS=true

# NSFW контент
VITE_ENABLE_NSFW_CONTENT=true

# Голосовые сообщения
VITE_ENABLE_VOICE_MESSAGES=false

# Загрузка изображений
VITE_ENABLE_IMAGE_UPLOAD=false

# Бета функции
VITE_ENABLE_BETA_FEATURES=true

# Debug режим (консольные логи, dev tools)
VITE_ENABLE_DEBUG_MODE=true