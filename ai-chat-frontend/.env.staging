# Staging Environment Variables  
# Staging окружение для тестирования production-like поведения

# ====================================
# Staging API
# ====================================
VITE_API_URL=https://api-staging.ai-chat.com/api
VITE_WS_URL=wss://ws-staging.ai-chat.com/ws

# ====================================
# Staging Features
# ====================================
VITE_DEBUG_MODE=false
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_SENTRY=true
VITE_USE_MOCK_API=false
VITE_SHOW_PERFORMANCE=true
VITE_ENABLE_SW=true
VITE_ENABLE_PWA=false
VITE_ENABLE_BETA_FEATURES=true

# ====================================
# Staging Third-party
# ====================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_staging_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_SENTRY_ENVIRONMENT=staging
VITE_APP_ENV=staging
VITE_ENABLE_ANALYTICS=false

# ====================================
# Staging Security  
# ====================================
VITE_SECURE_COOKIES=true
VITE_TOKEN_EXPIRY=3600
VITE_CONNECTION_TIMEOUT=20000
VITE_RATE_LIMIT_RPM=100
VITE_MESSAGE_RATE_LIMIT=20

# ====================================
# Staging Content
# ====================================
VITE_CONTENT_FILTER_LEVEL=moderate
VITE_ENABLE_MODERATION=true
VITE_ENABLE_NSFW=true